<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
   
    <title> Mercado Liebre Argentina</title>
            <!-- Font Awesome Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!-- Bootstrap Grid Stylesheet -->
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <!-- Own Stylesheet -->
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <!-- Header -->
    <% if(auth) { %>
        <%- include('../views/partials/headerLogueado.ejs') %>
    <% } else { %>
        <%- include('../views/partials/header.ejs') %>
    <% } %>
    <!-- /Header -->
 
    <!-- Datos del usuario -->
    <section class="info-usuario container products-wrapper">
        <div class="row">
            <div class="img-container offset-3 col-2">
                <img src="/images/users/<%= usuario[0].fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
            </div>
            <div class="data-container col-6">
                <div class="d-flex align-items-center ">
                    <h1 class="main-title"><%= usuario[0].nombre %>
                        <a href="/users/editar-perfil">
                            <i class="fas fa-cog"></i>
                        </a>
                    </h1>
                    <a class="btn mt-3 ml-4" href="">SEGUIR</a>
                </div>
                <div>
                    <ul class="">
                        <li><%= usuario[0].email %></li>
                        <li>8 productos</li>
                        <li>200 seguidores</li>
                        <li>300 comentarios</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- /Datos del usuario -->
 
    <!-- Mis productos -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Mis productos</h2>
            </div>
            <!-- Show mis productos (HAY QUE HACER UN FOR ACA) -->
            <% for(let i=0; i<10; i++) {%>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/<%= producto.lista[i].id %>">
                        <figure class="product-box_image">
                            <img src="/images/products/<%= producto.lista[i].imagen %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= producto.lista[i].modelo %></h2>
                            <p> Parte
                                superior sintética y de cuero premium
                                Forro textil para transpirabilidad y comodidad
                                Plantilla acolchada de espuma forrada con tela para amortiguación y comodidad
                                Sistema de cordones clásico para un ajuste seguro y ajustable
                                Suela de goma antideslizante duradera para un mejor agarre y tracción</p>
                            <p>Comentarios: 12000</p>
                        </article>
                    </a>
                </section>
            </div>          
            <% } %>
        </div>
    </div>
    <!-- /Mis productos -->
 
 
    <!-- footer -->
    <%- include('../views/partials/footer.ejs')%>
    <!-- /footer -->
</body>
</html>
