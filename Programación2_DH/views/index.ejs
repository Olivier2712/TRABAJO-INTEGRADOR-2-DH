<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>

	<!-- Header -->
    <% if(auth) { %>
        <%- include('../views/partials/headerLogueado.ejs') %>
    <% } else { %>
        <%- include('../views/partials/header.ejs') %>
    <% } %>
    <!-- /Header -->


	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
	
	<title> Mercado Liebre Argentina</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner_dos.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% for(let i=0; i<10; i++) {%>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/productos/">
                        <figure class="product-box_image">
                            <img src="./images/products/<%= producto.lista[i].imagen %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= producto.lista[i].modelo %></h2>
                            <p> <%= producto.lista[i].descripcion %></p>
                            <p>Comentarios: 12000</p>
                        </article>
                    </a>
                </section>
            </div>          
            <% } %>

			
			
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('../views/partials/footer.ejs')%>
	<!-- /footer -->
</body>	
</html>