<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
 
    <title> Mercado Liebre Argentina</title>
    <!-- Font Awesome Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!-- Bootstrap Grid Stylesheet -->
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <!-- Own Stylesheet -->
    <link rel="stylesheet" href="/css/app.css">
</head>
 
<body>
   <!-- Header -->
   <% if(auth) { %>
    <%- include('../views/partials/headerLogueado.ejs') %>
<% } else { %>
    <%- include('../views/partials/header.ejs') %>
<% } %>
<!-- /Header -->
 
    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Agregar productos</h2>
            </div>
            <!-- Show the "ultimos" products -->
            <h2 class="col-12">
            </h2>
            <form  action="/productos/store" method="post" enctype="multipart/form-data">
                <div class="FormularioCarga">
                    <input class="form-input" type="file" name="imagen_url" id="">
                    <input class="form-input" type="text" name="modelo" id="" placeholder="Nombre del producto">
                    <textarea name="descripcion" placeholder="Descripcion del producto" id="" cols="30" rows="10"></textarea>
                    <button class="form-label" type="submit">Agregar Producto</button>
                </div>
               
            </form>
 
 
    <!-- footer -->
    <%- include('../views/partials/footer.ejs')%>
    <!-- /footer -->
</body>
 
</html>